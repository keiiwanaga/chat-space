.chat-main
  .header
    .header__top-box
      .header__top-box__group-name 
        = @group.name
      .header__top-box__member-list
        = "Member:" 
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group) do
      .header__edit-btn Edit
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'new_message__message', placeholder: 'type a message'
      .new_message__mask
        = f.label :image, class: 'new_message__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'new_message__submit'